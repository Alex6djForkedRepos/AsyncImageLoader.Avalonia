<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:AsyncImageLoader">
  <Design.PreviewWith>
    <controls:AdvancedImage />
  </Design.PreviewWith>

  <Style Selector="controls|AdvancedImage">
    <Setter Property="Template">
      <ControlTemplate>
        <Grid>
          <Image Source="{TemplateBinding CurrentImage}"
                 Stretch="{TemplateBinding Stretch}"
                 StretchDirection="{TemplateBinding StretchDirection}"
                 IsVisible="{Binding !IsLoading, RelativeSource={RelativeSource TemplatedParent}}" />
          <ProgressBar VerticalAlignment="Center"
                       IsIndeterminate="True"
                       IsVisible="{TemplateBinding IsLoading}" />
        </Grid>
      </ControlTemplate>
    </Setter>
  </Style>
</Styles>